<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Groove" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">@color/primary_light</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:navigationBarColor">@color/primary_light</item>
    </style>

    <style name="Theme.Groove" parent="Base.Theme.Groove" />

    <style name="main_background_color">
        <item name="android:background">@color/background_light</item>
    </style>

    <style name="tool_bar">
        <item name="android:background">@color/primary_light</item>
        <item name="titleTextColor">@color/text_main_light</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="titleCentered">true</item>
    </style>

    <style name="tab_layout_style">
        <item name="tabBackground">@color/primary_light</item>
        <item name="tabTextColor">@color/accent_light</item>
    </style>

<!--    Bottom Navigation Bar Icon, Text Color and Ripple-->
    <style name="bottom_navigation_bar">
        <item name="itemIconTint">@color/text_secondary_light</item>
        <item name="itemTextColor">@color/accent_light</item>
        <item name="itemRippleColor">@color/background_light</item>
        <item name="backgroundTint">@color/primary_light</item>
    </style>

    <style name="textview_main">
        <item name="android:textColor">@color/text_main_light</item>
    </style>

    <style name="textview_secondary">
        <item name="android:textColor">@color/text_secondary_light</item>
    </style>

    <style name="drawable_tint">
        <item name="android:drawableTint">@color/text_secondary_light</item>
    </style>
</resources>