<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Groove" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="android:statusBarColor">@color/primary_dark</item>

        <item name="android:navigationBarColor">@color/primary_dark</item>

    </style>

    <style name="main_background_color">
        <item name="android:background">@color/background_dark</item>
    </style>

    <style name="tool_bar">
        <item name="android:background">@color/primary_dark</item>
        <item name="titleTextColor">@color/text_main_dark</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="titleCentered">true</item>
    </style>

    <style name="collapsing_toolbar_layout_content_scrim">
        <item name="contentScrim">@color/primary_dark</item>
    </style>

    <style name="tab_layout_style">
        <item name="tabBackground">@color/primary_dark</item>
        <item name="tabTextColor">@color/text_main_dark</item>
    </style>

    <!--    Bottom Navigation Bar Icon, Text Color and Ripple-->
    <style name="bottom_navigation_bar">
        <item name="itemIconTint">@color/text_secondary_dark</item>
        <item name="itemTextColor">@color/accent_dark</item>
        <item name="itemRippleColor">@color/background_dark</item>
        <item name="backgroundTint">@color/primary_dark</item>
    </style>

    <style name="textview_main">
        <item name="android:textColor">@color/text_main_dark</item>
    </style>

    <style name="textview_secondary">
        <item name="android:textColor">@color/text_secondary_dark</item>
    </style>
</resources>